  "main": "src/main/index.ts",
  "scripts": {
    "dev": "tsx src/main",
    "test": "jest src/tests --detectOpenHandles",
    "build-db": "docker build -t econoris-db-image ./Database --build-arg",
    "run-db": "docker run --name econoris-db-container -p 5432:5432 -e POSTGRES_PASSWORD=postgres -d econoris-db-image",
    "stop-db": "docker container stop econoris-db-container",
    "rm-db": "docker container rm econoris-db-container && docker image rm econoris-db-image",
    "log-db": "docker logs econoris-db-container",
    "test-db": "psql -U postgres -h localhost econoris"
  },
